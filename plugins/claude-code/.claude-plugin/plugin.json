{
  "$schema": "https://anthropic.com/claude-code/plugin.schema.json",
  "name": "speakeasy",
  "version": "1.0.0",
  "description": "Generate production-ready SDKs from OpenAPI specs. Lint, validate, and improve your API specifications with AI-powered suggestions.",
  "author": {
    "name": "Speakeasy",
    "email": "support@speakeasy.com",
    "url": "https://speakeasy.com"
  },
  "repository": "https://github.com/speakeasy-api/speakeasy",
  "homepage": "https://speakeasy.com/docs",
  "license": "Apache-2.0",
  "category": "development",
  "tags": [
    "openapi",
    "sdk-generation",
    "api",
    "codegen",
    "typescript",
    "python",
    "go",
    "java",
    "terraform"
  ],
  "keywords": [
    "openapi",
    "swagger",
    "sdk",
    "api client",
    "code generation",
    "rest api"
  ],
  "engines": {
    "claude-code": ">=1.0.0"
  },
  "settings": {
    "speakeasy.defaultTarget": {
      "type": "string",
      "description": "Default SDK target language (e.g., typescript, python, go)",
      "default": "typescript"
    },
    "speakeasy.autoLint": {
      "type": "boolean",
      "description": "Automatically lint OpenAPI specs before generation",
      "default": true
    },
    "speakeasy.workflowPath": {
      "type": "string",
      "description": "Path to workflow configuration file",
      "default": ".speakeasy/workflow.yaml"
    }
  }
}
